<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/CssReset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/PageSetup.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/WorldHub.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="wideNav" id="navbar">
            <a class="homepage" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            @* <a asp-area="" asp-controller="Home" asp-action="Index">Worlds</a> *@
            <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </nav>
    </header>
    <div class="pageLayout">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div>
            &copy; 2024 - Jan Liggett - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
